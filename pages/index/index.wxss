page{
  background: #f2f2f2
}
.swiper{
  width: 100%;
  height: 236px
}
swiper-item image{
  width: 100%;
  height: 236px
}
swiper-item{
  width: 100%
}
.intro{
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  padding: 10px 0;
  background: #fff;
  color: #CCA967
}
.intro>view{
  padding: 0 10px
}
.navbar{
  display: flex;
  font-size: 16px;
  background: #fff;
  padding: 16px 0;
  margin-top: 10px
}
.navbar image{
  width: 40px;
  height: 40px
}
.navbar>view{
  width: 25%;
  text-align: center
}
.navbar>view>view{
  width: 100%
}
.draw{
  background: #ffffff;
  width: 750rpx;
  padding-bottom: 20px;
}
.draw>view:first-child{
  width: 730rpx;
  background: #f2f2f2;
  height: 88px;
  margin: 0 auto
}
.draw>view:nth-child(2){
  display: flex;
  flex-wrap: wrap;
  width: 730rpx;
  margin: 0 auto;
  justify-content: space-around;
  margin-top: 5px;
}
.draw>view:nth-child(2)>view{
  width: 360rpx;
  height: 200rpx;
  background: #f2f2f2;
  margin-top: 5px
}
.draw>view:nth-child(2)>view>view{
  padding: 10px 0 0 10px
}
.draw>view:nth-child(2)>view>view:first-child{
  font-size: 16px
}
.draw>view:nth-child(2)>view>view:nth-child(2){
  font-size: 14px;
  color: #aaaaaa
}
.limit{
  width: 100%;
  background: #fff;
  margin-top: 10px;
  padding-bottom: 20px
}
.limit>view:first-child{
  display:flex;
  justify-content: space-between;
  width: 730rpx;
  margin: 0 auto;
  font-size: 16px;
  padding: 10px 0;
}
.limit>view:first-child text{
  background: #000;
  color: #fff;
  font-size: 12px;
  padding:0 4px
}
.limit>view:first-child>view:last-child{
  font-size: 14px;
  color: #aaaaaa
}
.limit>view:nth-child(2)>view{
  width: 30%;
  font-size: 16px
}
.limit>view:nth-child(2){
  display: flex;
  justify-content: space-around;
}
.limit>view:nth-child(2)>view>view:first-child{
  height: 110px;
  width: 100%;
  background: #f2f2f2
}
.limit>view:nth-child(2)>view>view:nth-child(2){
  font-size: 10px;
  display: flex;
  padding: 4px 0;
}
.limit>view:nth-child(2)>view>view:nth-child(2)>text{
  display: block
}
.limit>view:nth-child(2)>view>view:nth-child(2)>text:first-child{
  border: 1px solid #CCA967;
  color: #CCA967
}
.limit>view:nth-child(2)>view>view:nth-child(2)>text:nth-child(2){
  background: #DD746F;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  height: 20px;
  width: 20px;
  line-height: 20px;
  margin-left: 10px
}
.limit>view:nth-child(2)>view>view:nth-child(3){
  font-size: 14px
}
.limit>view:nth-child(2)>view>view:nth-child(4){
  color: #DB0707;
  font-size: 14px
}
.limit>view:nth-child(2)>view>view:nth-child(4)>text{
  font-size: 12px;
  color: #aaaaaa
}
.daynew{
  background: #fff;
  margin-top: 10px
}
.daynew>view:first-child{
  padding: 10px 10px 0 10px;
  font-size: 16px
}
.scroll_box{
height: 288rpx;
overflow: hidden;
padding: 20rpx;
background: #fff;
white-space: nowrap;
}
.item_list{
width: 398rpx;
height: auto;
margin-right: 23rpx;
display: inline-block;
background: #f2f2f2
}
.item_list>view:first-child{
  height: 100px;
  width: 100%;
  background: #aaaaaa;
}
.item_list>view:nth-child(2){
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  padding:6px 6px 0 6px
}
.item_list>view:nth-child(2)>view:last-child{
  color: #DB0707
}
.item_list>view:nth-child(3){
  font-size: 14px;
  padding: 0 6px 6px 6px;
  color: #aaaaaa
}
.hot{
  margin-top: 10px;
  background: #fff
}
.hot>view:first-child{
  text-align: center;
  padding: 6px
}
.hot>view:first-child>view:last-child{
  font-size: 14px;
  color: #aaaaaa;
  padding: 6px
}




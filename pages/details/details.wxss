}

.sendto>view:first-child {
  display: flex;
  justify-content: space-between;
}

.sendto>view>view:first-child {
  width: 128rpx;
  color: #8c8c8c;
  text-indent: 1em;
}

.sendto>view>view:nth-child(2) image {
  width: 29rpx;
  height: 23rpx;
  margin-right: 10rpx;
}

.sendto>view:first-child>view:last-child {
  width: 114rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sendto>view:first-child>view:nth-child(2) {
  width: 508rpx;
}

.sendto>view {
  display: flex;
  font-size: 24rpx;
}

.sendto>view:nth-child(2) {
  margin-top: 5rpx;
}

.sendto text {
  color: #bf9844;
}

.sendto>view:nth-child(3) {
  margin-top: 20rpx;
}

.foots {
  height: 220rpx;
  background: #fff;
  width: 750rpx;
}


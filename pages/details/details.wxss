.swiper {
  height: 288px;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.shoptit {
  background: #fff;
  padding-bottom: 10px;
}

.shoptit>view {
  padding: 0 30rpx;
}

.shoptit>view:first-child {
  font-size: 34rpx;
  padding-top: 10px;
}

.shoptit>view:first-child>image {
  height: 32rpx !important;
  width: 96rpx !important;
}

.shoptit>view:nth-child(2) {
  color: #bf9844;
  font-size: 24rpx;
  margin-top: 8px;
}

.shoptit>view:nth-child(3) {
  margin-top: 10px;
  font-size: 28rpx;
  color: #8c8c8c;
}

.shoptit>view:nth-child(4) {
  font-size: 36rpx;
  display: flex;
  align-items: center;
}

.shoptit>view:nth-child(4) image {
  height: 28rpx;
  width: 86rpx;
  margin-left: 10rpx;
}

.vipAD {
  width: 720rpx;
  height: 96rpx;
  margin: 24rpx auto;
  display: block;
}

.shopdet {
  background: #fff;
}

.shopdet>view:first-child {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  justify-content: space-between;
}

.shopdet>view:first-child image {
  height: 24rpx;
  width: 24rpx;
}

.omit {
  height: 10rpx !important;
  width: 24rpx;
}

.shopdet>view:first-child {
  color: #4a4a4a;
  padding: 20rpx 0;
  border-bottom: 1rpx #efefef solid;
}

.port {
  height: 40rpx !important;
  width: 115rpx !important;
  margin: 0 auto;
  display: block;
}

.shopdet>view:first-child>view>view:first-child {
  width: 128rpx;
}

.shopdet>view:first-child>view:last-child {
  width: 114rpx;
  display: flex;
  justify-content: center;
}

.shopdet>view:first-child>view image {
  padding: 0 10rpx;
}

.shopdet>view:first-child>view {
  display: flex;
  align-items: center;
}

.detlist>view {
  display: flex;
  font-size: 24rpx;
  justify-content: space-between;
}

.detlist>view>view:first-child {
  width: 128rpx;
  font-size: 24rpx;
  color: #4a4a4a;
  text-indent: 1em;
}

.detlist>view>view {
  padding: 16rpx 0;
}

.detlist>view>view:nth-child(2) {
  width: 508rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.detlist>view>view:nth-child(3) {
  width: 114rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.detlist text {
  border: #bf9844 1px solid;
  color: #bf9844;
  padding: 2rpx 10rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.sku {
  background: #fff;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  width: 100%;
  margin: 15rpx 0;
  justify-content: space-between;
}

.sku>view:first-child {
  width: 128rpx;
  text-indent: 1em;
  color: #8c8c8c;
}

.sku>view:nth-child(2) {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 508rpx;
}

.sku>view:last-child {
  width: 114rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sendto {
  background: #fff;
